<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Shopping Cart</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <h1 class="mb-4">Shopping Cart</h1>
    <% if (cartItems && cartItems.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% cartItems.forEach(item => { %>
            <tr>
              <td><%= item.name %></td>
              <td>$<%= item.price.toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="mt-4">
        <p><strong>Subtotal:</strong> $<%= subtotal.toFixed(2) %></p>
        <p><strong>Tax:</strong> $<%= tax.toFixed(2) %></p>
        <p><strong>Shipping:</strong> $<%= shippingCost.toFixed(2) %></p>
        <h3><strong>Total:</strong> $<%= total.toFixed(2) %></h3>
      </div>
      <div class="mt-4">
        <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
        <a href="/home" class="btn btn-secondary">Continue Shopping</a>
      </div>
    <% } else { %>
      <p class="text-muted">Your cart is empty.</p>
      <a href="/home" class="btn btn-secondary mt-3">Browse Products</a>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>